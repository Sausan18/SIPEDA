<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SIPEDA - Dashboard</title>
  <link rel="stylesheet" href="css/app.css">
  <script src="js/app.js"></script>
</head>

<body>
  <div class="lg:mx-4">
    <div class="drawer drawer-mobile">
      <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        <!-- Page content here -->

        <%- include('../partials/navbar'); %>

        <!-- Content -->
        <div class="grid grid-cols-2 gap-2">
          <div class="mx-10">
            <div class="card w-96 bg-base-100 drop-shadow-lg mt-10">
              <div class="flex">
                <div class="card-body">
                  <h2 class="card-title">Surat Masuk</h2>
                  <p><%= countData.total_surat_masuk %></p>
                </div>
                <div class="mr-10 mt-5">
                  <svg class="w-20 h-20" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0l-3-3m3 3l3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z">
                    </path>
                  </svg>
                  <div class="card-actions justify-end"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="mx-10">
            <div class="card w-96 bg-base-100 drop-shadow-lg mt-10">
              <div class="flex">
                <div class="card-body">
                  <h2 class="card-title">Surat Keluar</h2>
                  <p><%= countData.total_surat_keluar %></p>
                </div>
                <div class="mr-10 mt-5">
                  <svg class="w-20 h-20" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z">
                    </path>
                  </svg>
                  <div class="card-actions justify-end"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="mx-10">
            <div class="card w-96 bg-base-100 drop-shadow-lg mt-10">
              <div class="flex">
                <div class="card-body">
                  <h2 class="card-title">Laporan Pertanggungjawaban</h2>
                  <p><%= countData.total_lpj %></p>
                </div>
                <div class="mr-10 mt-5">
                  <svg class="w-20 h-20" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z">
                    </path>
                  </svg>
                  <div class="card-actions justify-end"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="mx-10">
            <div class="card w-96 bg-base-100 drop-shadow-lg mt-10">
              <div class="flex">
                <div class="card-body">
                  <h2 class="card-title">Data Prestasi</h2>
                  <p><%= countData.total_prestasi %></p>
                </div>
                <div class="mr-10 mt-5">
                  <svg class="w-20 h-20" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M16.5 18.75h-9m9 0a3 3 0 013 3h-15a3 3 0 013-3m9 0v-3.375c0-.621-.503-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0a7.454 7.454 0 01-.982-3.172M9.497 14.25a7.454 7.454 0 00.981-3.172M5.25 4.236c-.982.143-1.954.317-2.916.52A6.003 6.003 0 007.73 9.728M5.25 4.236V4.5c0 2.108.966 3.99 2.48 5.228M5.25 4.236V2.721C7.456 2.41 9.71 2.25 12 2.25c2.291 0 4.545.16 6.75.47v1.516M7.73 9.728a6.726 6.726 0 002.748 1.35m8.272-6.842V4.5c0 2.108-.966 3.99-2.48 5.228m2.48-5.492a46.32 46.32 0 012.916.52 6.003 6.003 0 01-5.395 4.972m0 0a6.726 6.726 0 01-2.749 1.35m0 0a6.772 6.772 0 01-3.044 0">
                    </path>
                  </svg>
                  <div class="card-actions justify-end"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="mx-10">
            <div class="card w-96 bg-base-100 drop-shadow-lg mt-10">
              <div class="flex">
                <div class="card-body">
                  <h2 class="card-title">Data Beasiswa</h2>
                  <p><%= countData.total_beasiswa %></p>
                </div>
                <div class="mr-10 mt-5">
                  <svg class="w-20 h-20" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5">
                    </path>
                  </svg>
                  <div class="card-actions justify-end"></div>
                </div>
              </div>
            </div>
          </div>

          <% if (user.role == 0) { %>
            <div class="mx-10">
              <div class="card w-96 bg-base-100 drop-shadow-lg mt-10">
                <div class="flex">
                  <div class="card-body">
                    <h2 class="card-title">Data Pengguna</h2>
                    <p>
                      <%= countData.total_users %>
                    </p>
                  </div>
                  <div class="mr-10 mt-5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20" viewBox="0 0 512 512">
                      <path d="M344 144c-3.92 52.87-44 96-88 96s-84.15-43.12-88-96c-4-55 35-96 88-96s92 42 88 96z" fill="none"
                        stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32" />
                      <path
                        d="M256 304c-87 0-175.3 48-191.64 138.6C62.39 453.52 68.57 464 80 464h352c11.44 0 17.62-10.48 15.65-21.4C431.3 352 343 304 256 304z"
                        fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="32" />
                    </svg>
                    <div class="card-actions justify-end"></div>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>

        <!-- Footer -->
        <footer class="footer footer-center p-4">
          <div>
            <p>Copyright Â© 2023 - All right reserved by SIPEDA</p>
          </div>
        </footer>
        <!-- End of Footer -->

      </div>
        <!-- End Of Content -->
      <%- include('../partials/sidebar'); %>
    </div>
  </div>

  <!-- Modal -->
  <input type="checkbox" id="modal-global" class="modal-toggle" />
  <label id="modal-global-container" for="modal-global" class="modal modal-bottom sm:modal-middle cursor-pointer">
    <label class="modal-box p-8 relative">

    </label>
  </label>
</body>

</html>